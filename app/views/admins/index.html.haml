%table.admin{:cellpadding => "5px", :cellspacing => "5px", :width => '100%'}
  %tr
    %th Email
    %th Status
    %th Actions
  - @admins.each do |admin|
    %tr
      %td= admin.email
      - if admin.activation_state
        %td= admin.activation_state
      %td
        = link_to('Show', admin_path(admin))
        | #{link_to('Edit', edit_admin_path(admin))}