  %h2 Sign in with Email and Password:
  .rdfrs_auth_form
    = form_tag sessions_path do 
      .input_div
        = text_field_tag :email, params[:email], :class => 'email_field new_field', :placeholder => 'Email Address', :label => false, :id => 'Email'
      .input_div
        = password_field_tag :password, nil, :class => 'pass_field new_field', :placeholder => 'Password', :label => false, :id => 'Password'
      .input_div.check_box_div
        = check_box_tag :remember_me, 1, params[:remember_me], :class => 'input_style checkbox_field', :id => 'remember_me'
        = label_tag :remember_me, nil, :class => 'checkbox_label'
      .form_bottom_div
        = link_to 'Forgot Password?', new_password_reset_path
        %br
        -#= link_to t(:didnt_recieve_confirmation_email), missing_confirmation_path
        = submit_tag "Sign in", :class => 'button'
