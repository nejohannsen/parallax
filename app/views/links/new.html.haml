.link_new_form
  = simple_form_for @link  do |f|
    = f.input :title, :wrapper_html => { :class => 'input_div' }, :input_html => { :class => 'input_style' }
    = f.input :url, :wrapper_html => { :class => 'input_div' }, :input_html => { :class => 'input_style' }
    = f.file_field :banner, :wrapper_html => { :class => 'input_div' }, :input_html => { :class => 'input_style' }
    = f.button :submit